<% content_for :title, @course.title %>
<%= render 'shared/header' %>
<div id="wrapper">
    <%= render 'shared/nav' %>
    <div id="main">
    	<div id="content">
        	<h1>Course Info</h1>
	    		<table>
	    			<tr>
	    				<th>Instructor</th><td>To do</td>
	    			</tr>
	    			<tr>
	    				<th>Email</th><td><a href="mailto:jkeller@psu.edu">jkeller@psu.edu</a></td>
	    			</tr>
	    			<tr>
	    				<th>Office</th><td>Olmstead 238</td>
	    			</tr>
	    			<tr>
	    				<th>Office Hours</th><td>MWF: 2-3pm</td>
	    			</tr>
	    			<tr>
	    				<th>Venue</th><td>Olmstead 252</td>
	    			</tr>
	    			<tr>
	    				<th>Time</th><td>MWF: 9-10am</td>
	    			</tr>
	    		</table>
	    		<h1>Announcements</h1>
	    		<% @course.announcements.each do |announcement| %>
          <div class="anbox">
          	<div class="anhead">
          		<div class="andate">
	          		<p><%= announcement.date %></p>
	          	</div>
          		<div class="antitle">
          			<p><%= announcement.title %></p>
          		</div>
          	</div>
          	<div class="ancontent">
 		          <p><%= announcement.content %></p>
 		        </div>
          </div>
          <% end %>
    	</div>
    </div>
</div>
<%= render 'shared/footer' %>