<% content_for :title, @course.title %>
<%= render 'shared/header' %>
<%= render 'shared/nav' %>
<div class="row">
  <div class="col-lg-12">
      <h2>Lecture Notes</h2>
      <table class="table">
        <thead>
        <tr>
          <th class="col-xs-2">Date</th>
          <th class="col-xs-10">Section</th>
        </tr>
        </thead>
        <tbody>
        <% @lectures.each do |lecture| %>
          <tr>
            <td><%= lecture.date.to_s %></td>
            <td><%= lecture.section + " - " + lecture.title %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
  </div>
</div>  